<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SimonGamePage"
    android:padding="16dp"
    android:background="#222222">

    <!-- Player Username Text -->
    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome, user!"
        android:textColor="#fcfcf7"
        android:textSize="24sp"
        android:fontFamily="serif"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="24dp"/>

    <!-- Score Text -->
    <TextView
        android:id="@+id/scoreText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Score: 0"
        android:textSize="24sp"
        android:textColor="#FFFFFF"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/textView"
        android:layout_marginTop="16dp"
        android:padding="8dp"/>

    <!-- Game Buttons in a 2x2 Grid -->
    <GridLayout
        android:id="@+id/gameGrid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:columnCount="2"
        android:rowCount="2"
        android:layout_marginTop="40dp">

        <!-- Top Left Button (Red) -->
        <Button
            android:id="@+id/buttonRed"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:background="#FF0000"
            android:layout_margin="8dp"/>

        <!-- Top Right Button (Blue) -->
        <Button
            android:id="@+id/buttonBlue"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:background="#0000FF"
            android:layout_margin="8dp"/>

        <!-- Bottom Left Button (Green) -->
        <Button
            android:id="@+id/buttonGreen"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:background="#00FF00"
            android:layout_margin="8dp"/>

        <!-- Bottom Right Button (Yellow) -->
        <Button
            android:id="@+id/buttonYellow"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:background="#FFFF00"
            android:layout_margin="8dp"/>
    </GridLayout>

    <!-- Start/Restart Button -->
    <Button
        android:id="@+id/startButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Start Game"
        android:textSize="20sp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/gameGrid"
        android:layout_marginTop="32dp"
        android:padding="16dp"
        android:backgroundTint="#009688"
        android:textColor="#FFFFFF"/>

</RelativeLayout>

